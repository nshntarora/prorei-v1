<div class="formwrapper">
<center>
<h1 style="padding: 1em;"><b><font color="#5a2ca0">jobseeker</font> log in</b></h1>
<%= minimal_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, :placeholder => 'Email', required: false, autofocus: true %>
    <%= f.input :password, :placeholder => 'Password', required: false %>
    <br>
    <%= f.input :remember_me, label: "Should I remember you?", as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in" %>
  </div>
<% end %>
<br>
<div class="bottom-links">
  <%= render "devise/shared/links" %>
</div>
</center>
</div>
