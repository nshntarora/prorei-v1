<% @job.responses.each do |response| %>
<% if @job.responses>=1 %>
    <div class="responses">
      <p class="response-body">
        <%= response.response %>
      </p>
      <p class="date">
        Applied
        <%= time_ago_in_words(response.created_at) %>
        by
        <%= response.user_id %>
        <% if response.shortlisted_by_employer==false %>
        <%= link_to "Shortlist", [response.job, response], method: :put %>
        <% else %>
        <%= link_to "Remove from Shortlist", [response.job, response], method: :patch %>
        <% end %>
        <%= response.shortlisted_by_employer %>
      </p>
      <p class="date">
      </p>
    </div>
  <% else %>
    <p> No one has responded to your job listing yet. </p>
  <% end %>
  <% end %>
