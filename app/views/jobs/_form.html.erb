<%= minimal_form_for @job do |f| %>
	<%= f.collection_select :category_id, Category.all, :id, :name, {prompt: "Choose a category"} %>
  <%= f.input :title %>
  <%= f.select :location,
  City.all.map { |u| [u.name, u.name] },
               { include_blank: true },
               { class: 'chosen-select' }
%>
  <%= f.input :description %>
  <%= f.input :responsibilities %>
  <%= f.input :additional_info %>
  <%= f.input :question %>
  <%= f.submit %>
<% end %>
