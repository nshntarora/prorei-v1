<%= search_form_for @q do |f| %>
  <%= f.label :title_cont, "Title of the job" %><br>
  <%= f.search_field :title_cont, class: 'form-control' %>
  <%= f.label :location_eq, "Where at?" %><br>
  <%= f.select :location_eq,
  City.all.map { |u| [u.name, u.name] },
               { include_blank: true },
               { class: 'chosen-select' }
  %><br>
  <%= f.label :category_name_eq, "Category" %><br>
  <%= f.collection_select(:category_name_eq, Category.all, :name, :name)%><br>
  <%= f.label :job_type_name_eq, "Job Type" %><br>
  <%= f.collection_select(:job_type_name_eq, JobType.all, :name, :name) %><br>
  <%= f.label :employer_id_eq, "Where at?" %><br>
  <%= f.select :employer_id_eq,
  Employer.all.map { |u| [u.name, u.id] },
               { include_blank: true },
               { class: 'chosen-select' }
  %><br>
  <%= f.submit 'Apply Filters', :class=>"btn btn-default" %>
  <% end %>
