<%= minimal_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

  <%= f.error_notification :error_html => { :class => "error"} %>
<%= devise_error_messages! %>
<div class="formwrapper">
<center>
<h1 style="padding: 1em;"><b>register as an <font color="#5a2ca0">employer</font></b></h2>
  <div class="form-inputs">
    <%= f.input :name, :placeholder => 'Email', required: true, autofocus: true %>
    <%= f.input :email, :placeholder => 'Email', required: true, autofocus: true %>
    <%= f.input :password, :placeholder => 'Password', required: true %>
    <%= f.input :password_confirmation, :placeholder => 'Confirm Password', required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up"  %>
  </div>
<% end %>
<br>
<div class="bottom-links">
    <%= link_to "already have an account? sign in", new_employer_session_path %>
  </div>
</center>
</div>
